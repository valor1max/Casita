        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

	var remain = 0;
	var gt = new GlideRecord('u_monthly_bills');
	gt.addEncodedQuery('u_parent_project=' + current.u_parent_project + '^u_method_of_payment=paycheck');
	gt.query();
	while(gt.next()){
		remain += parseFloat(gt.u_amount_paid);
	}
	
	var gp = new GlideRecord('u_casita_monthly_project');
	gp.setWorkflow(false);
	gp.get(current.u_parent_project);
	gp.u_remaining_monthly_income = remain;
	gp.update();

})(current, previous);]]></script>
