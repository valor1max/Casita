        <script><![CDATA[(function executeRule(current, previous /*null when async*/ ) {	
	
	var amount = 0;
    var debt = new GlideRecord('u_debt');
    debt.query();
    while (debt.next()) {
        amount += parseFloat(debt.u_debt_amount);		
    }

    var gt = new GlideRecord('u_casita_monthly_project');
    gt.addEncodedQuery('u_active_project=true');
	gt.setWorkflow(false);
    gt.query();
    if (gt.next()) {
        gt.u_total_debt = amount;
        gt.update();
    }
	
	var gp = new GlideRecord('u_debt');
	gp.setWorkflow(false);
	gp.get(current.sys_id);
	var camount = parseFloat(gp.u_debt_amount);
	var credit = parseFloat(gp.u_total_credit);
	gp.u_available_credit = (credit - camount);
	gp.update();

})(current, previous);]]></script>
